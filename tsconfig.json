{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["es6", "DOM"],
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["cli", "index.ts"],
  "exclude": ["node_modules", "dist", ".github"]
}
